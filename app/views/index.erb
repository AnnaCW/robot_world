
  <div class="jumbotron">

      <div class="container">

        <h1>All Robots</h1>

        <% @robots.each do |robot| %>
          <div class='row'>
            <h3><%= robot.id %>: <a href="/robots/<%= robot.id %>"><%= robot.name %></a></h3>
            <a href="/robots/<%= robot.id %>/edit">Edit</a>
          </div>

        <form action="/robots/<%= robot.id %>" method="post">
          <input type="hidden" name="_method" value="DELETE">
          <input type="submit" value="Delete">
        </form>
        <% end %>

    </div>
  </div>

</div>
